{
  "name": "ts-node-template",
  "version": "4.0.0",
  "description": "Typescript Node boilerplate.",
  "author": "baharalidurrani@gmail.com",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node-dev ./src/index.ts",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "debug": "ts-node-dev --respawn --inspect=5858 ./src/index.ts",
    "build": "rm -rf dist && tsc",
    "serve": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker-build": "docker build -t ts-node .",
    "docker-run": "docker run -p 8000:8000 ts-node",
    "lint": "eslint \"src/**/*.{ts,js}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --report-unused-disable-directives --max-warnings 0  --fix",
    "pretty": "prettier --write \"src/**/*.+(ts|js)\"",
    "dep:update": "npm-check-updates -u"
  },
  "dependencies": {
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
